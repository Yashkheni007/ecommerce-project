                    %span.required *
                  %input{placeholder: "", required: "", type: "text"}/
                .col-sm-6.float-left.form-group
                  %label
                    Email
                    %span.required *
                  %input#r-email{placeholder: "", required: "", type: "email"}/
                .col-sm-12.float-left.form-group
                  %label{for: "r-textarea"} Your Review
                  %textarea#r-textarea.w-100{cols: "30", name: "review", rows: "10"}
              %input.btn.btn-primary.submit{type: "submit", value: "Submit Review"}/
  #product-accessories.product-accessories.my-40.w-100.float-left
    .container
      .row
        .tt-title.d-inline-block.float-none.w-100.text-center You might also like
        .product-accessories-content.products.grid.owl-carousel
          - if @products.present?
            - @products.each do |product|
              .product-layouts
                .product-thumb
                  .image.zoom
                    %a{href: product_path(product)}
                      = image_tag product.image, alt: product.name
                      = image_tag product.image, alt: product.name, class: "second_image img-responsive"
                  .thumb-description
                    .caption
                      %h4.product-title.text-capitalize
                        %a{href: product_path(product)} #{product.name}
                    .rating
                      .product-ratings.d-inline-block.align-middle
                        %span.fa.fa-stack
                          %i.material-icons star
                        %span.fa.fa-stack
                          %i.material-icons star
                        %span.fa.fa-stack
                          %i.material-icons star
                        %span.fa.fa-stack
                          %i.material-icons.off star
                        %span.fa.fa-stack
                          %i.material-icons.off star
                    .price
                      .regular-price #{product.price}
                    .button-wrapper
                      .button-group.text-center
                        %button.btn.btn-primary.btn-cart{"data-target" => "#cart-pop", "data-toggle" => "modal", type: "button"}
                          %i.material-icons shopping_cart
                          %span Add to cart
                        %a.btn.btn-primary.btn-wishlist{href: "wishlist.html"}
                          %i.material-icons favorite
                          %span wishlist
                        %button.btn.btn-primary.btn-quickview{"data-target" => "#product_view", "data-toggle" => "modal", type: "button"}
                          %i.material-icons visibility
                          %span Quick View
