%body#product
  %nav.w-100.float-left{"aria-label" => "breadcrumb"}
    %ol.breadcrumb.parallax.justify-content-center{"data-source-url" => asset_path('banner/parallax.jpg'), style: "background-image: url('#{asset_path('banner/parallax.jpg')}'); background-position: 50% 0.809717%;"}
      %li.breadcrumb-item
        = link_to root_path do
          Home
      %li.breadcrumb-item.active{"aria-current" => "page"} Shop
  .product-deatils-section.float-left.w-100
    .container
      .row
        .left-columm.col-lg-5.col-md-5
          .product-large-image.tab-content
            #product-01.tab-pane.active{"aria-labelledby" => "product-tab-01", role: "tabpanel"}
              .single-img.img-full
                - if @product.image.attached?
                  = image_tag @product.image
        .right-columm.col-lg-7.col-md-7
          .product-information
            %h4.product-title.text-capitalize.float-left.w-100
              %a.float-left.w-100{href: "product-details.html"}
              = @product.name
            .description
              = @product.description
            .rating
              .product-ratings.d-inline-block.align-middle
                %span.fa.fa-stack
                  %i.material-icons star
                %span.fa.fa-stack
                  %i.material-icons star
                %span.fa.fa-stack
                  %i.material-icons star
                %span.fa.fa-stack
                  %i.material-icons.off star
                %span.fa.fa-stack
                  %i.material-icons.off star
              %a.review-down{href: "#"} (customer reviews)
            .price.float-left.w-100.d-flex
              .regular-price
                = @product.price
            .product-variants.float-left.w-100
              .col-md-3.col-sm-6.col-xs-12.size-options.d-flex.align-items-center
                %h5 Size:
                = @product.size
            .btn-cart.d-flex.align-items-center.float-left.w-100
              %h5 qty:
              %input{type: "number", value: "1"}/
              %button.btn.btn-primary.btn-cart.m-0{"data-target" => "#cart-pop", "data-toggle" => "modal", type: "button"}
                %i.material-icons shopping_cart
                Add To Cart
            .tt-links.d-flex.align-items-center.float-left.w-100.mb-15
              %a.link.btn-wishlist{href: "wishlist.html"}
                %i.material-icons favorite
                %span wishlist
  .product-tab-area.float-left.w-100
    .container
      .tabs
        %ul.nav.nav-tabs.justify-content-start
          %li.nav-item
            %a#tab1.nav-link.active{"data-toggle" => "tab", href: "#product-tab1"}
              .tab-title Description
          %li.nav-item
            %a#tab2.nav-link{"data-toggle" => "tab", href: "#product-tab2"}
              .tab-title Reviews (2)
      .tab-content.float-left.w-100
        #product-tab1.tab-pane.active{"aria-labelledby" => "tab1", role: "tabpanel"}
