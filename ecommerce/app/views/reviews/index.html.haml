%h1 Listing reviews

%table
  %thead
    %tr
      %th Title
      %th Content
      %th Image
      %th Createdat
      %th
      %th
      %th

  %tbody
    - @reviews.each do |review|
      %tr
        %td= review.title
        %td= review.content
        %td= review.image
        %td= review.createdAt
        %td= link_to 'Show', review
        %td= link_to 'Edit', edit_review_path(review)
        %td= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' }

